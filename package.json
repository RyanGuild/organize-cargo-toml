{
  "name": "organize-cargo-toml",
  "displayName": "Organize Cargo.toml",
  "description": "VSCode extension to organize and format Cargo.toml files",
  "version": "0.1.4",
  "publisher": "dev-layer",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "rust",
    "cargo",
    "toml",
    "format",
    "organize"
  ],
  "activationEvents": [
    "onCommand:organize-cargo-toml.organize",
    "onCommand:organize-cargo-toml.helloWorld",
    "onLanguage:toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "organize-cargo-toml.organize",
        "title": "Organize Cargo.toml",
        "category": "organize-cargo-toml"
      },
      {
        "command": "organize-cargo-toml.helloWorld",
        "title": "Hello World",
        "category": "organize-cargo-toml"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .toml && resourceFilename =~ /Cargo\\.toml$/",
          "command": "organize-cargo-toml.organize",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .toml && resourceFilename =~ /Cargo\\.toml$/",
          "command": "organize-cargo-toml.organize",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Organize Cargo.toml",
      "properties": {
        "organize-cargo-toml.preserveComments": {
          "type": "boolean",
          "default": true,
          "description": "Preserve comments when organizing"
        }
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "package": "vsce package",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.87.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.6.1",
    "ovsx": "^0.10.5",
    "typescript": "^5.8.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "toml": "^3.0.0"
  },
  "author": "Ryan Guild",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanguild/organize-cargo-toml.git"
  },
  "bugs": {
    "url": "https://github.com/ryanguild/organize-cargo-toml/issues"
  },
  "homepage": "https://github.com/ryanguild/organize-cargo-toml#readme"
}
